<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Count_Down_Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Count_Down_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/Count_Down_Button1"
        app:layout_constraintTop_toTopOf="@id/Count_Down_Button1" />

    <Button
        android:id="@+id/Count_Down_Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/Count_Down_Button1"
        app:layout_constraintStart_toEndOf="@id/Count_Down_Button1" />

    <Button
        android:id="@+id/Count_Down_Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="@+id/Count_Down_Button1"
        app:layout_constraintTop_toTopOf="@id/Count_Down_Button1" />


    <TextView
        android:id="@+id/Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/Count_Down_Button1"
        app:layout_constraintStart_toStartOf="@id/Count_Down_Button1"/>

    <TextView
        android:id="@+id/TimerTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/Count_Down_Button1"
        app:layout_constraintBottom_toTopOf="@id/Count_Down_Button1" />

    <TextView
        android:id="@+id/Count_Label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E42424"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@id/Count_Down_Button1"
        app:layout_constraintTop_toBottomOf="@id/Count_Down_Button1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/plus"
        app:backgroundTint="@color/design_default_color_primary"
        app:tint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Count_Down_Button3"
        app:layout_constraintStart_toEndOf="@id/Count_Down_Button3"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>